
public class tryingRecursio {

	public static void main(String[] args) {
		
		int x = 5;
		printNumAsc(x, 0);
	}
	
	public static void printNumDesc(int num) {
		if (num > 0) {
			System.out.println(num);
			printNumDesc(num-1);
		}
	}
	
	public static void printNumAsc(int num, int sum) {
		if (num > 0) {
			System.out.println(num);
			printNumAsc(num-1, sum+=num);
		}
	}
	
}
